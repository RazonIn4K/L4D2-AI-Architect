# L4D2-AI-Architect Environment Configuration
# Copy this file to .env and fill in your paths

# =============================================================================
# L4D2 Game Server Configuration
# =============================================================================
L4D2_INSTALL_PATH=/path/to/your/l4d2/installation
SRCDS_PATH=/path/to/your/srcds/installation
SERVER_PORT=27015
RCON_PASSWORD=your_rcon_password

# =============================================================================
# SourceMod Plugin Configuration
# =============================================================================
SM_PLUGIN_PATH=./data/l4d2_server/addons/sourcemod/plugins
SM_CONFIG_PATH=./data/l4d2_server/addons/sourcemod/configs

# =============================================================================
# Bridge/Network Configuration
# =============================================================================
BRIDGE_HOST=localhost
BRIDGE_PORT=27050
BRIDGE_PROTOCOL=tcp  # tcp, udp, or http

# =============================================================================
# AI Director Configuration
# =============================================================================
DIRECTOR_ENABLED=true
DIRECTOR_UPDATE_RATE=10  # Hz
DIRECTOR_LOG_LEVEL=INFO

# =============================================================================
# Training Configuration
# =============================================================================
GPU_ID=0  # GPU device ID for training
MIXED_PRECISION=true  # Use fp16/bf16 training
TENSORBOARD_PORT=6006

# =============================================================================
# API Keys (Optional)
# =============================================================================
GITHUB_TOKEN=your_github_token_here
WANDB_API_KEY=your_wandb_key_here  # Optional: for experiment tracking

# =============================================================================
# Model Paths
# =============================================================================
BASE_MODEL_PATH=./models/base
FINETUNED_MODEL_PATH=./model_adapters
EXPORT_PATH=./exports
