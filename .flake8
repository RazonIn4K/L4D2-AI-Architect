[flake8]
# Maximum line length (matches Black default)
max-line-length = 120

# Maximum complexity for functions
max-complexity = 10

# Ignore certain error codes
# E203: whitespace before ':' (conflicts with Black)
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflicts with Black)
# E402: module level import not at top of file (needed for path manipulation)
ignore = E203, E501, W503, E402

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    model_adapters,
    exports,
    data,
    notebooks,
    .github

# Per-file ignores
per-file-ignores =
    # Init files can have unused imports
    __init__.py: F401
    # Test files can have long lines and unused imports
    tests/*: E501, F401, F811
    # Scripts may have star imports for convenience
    scripts/utils/*: F403, F405

# Select specific error codes to check
select = E, F, W, C90

# Show source code for errors
show-source = true

# Count errors
count = true

# Statistics about errors
statistics = true
